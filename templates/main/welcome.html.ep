% layout 'default';
% title 'Welcome';
<% use Data::Dumper; %>

<h2>Welcome to the Course Management App</h2>


<p>

<form method="POST" action="/login">
<input type="email" name="email" placeholder="my@example.com">
<input type="submit" name="Login">
</form>


<ul id="courses">
  <% for my $course_ref (@{ $cc->{courses} }) { %>
    <li id="<%= $course_ref->{id} %>" ><a href="/course/<%= $course_ref->{id} %>"><%= $course_ref->{name} %></a></li>
  <% } %>
</ul>

<pre>
   <%= Dumper $cc %>
</pre>
</p>
 
